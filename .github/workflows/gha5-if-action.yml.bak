        uses: actions/setup-node@v4  
        with:  
          node-version: 20  
    
      - name: Cache npm dependencies               
        uses: actions/cache@v4  
        with:  
          path: ~/.npm  
          key: ${{ runner.os }}-npm-${{ hashFiles('**/package-lock.json') }}   
          restore-keys: |  
            ${{ runner.os }}-npm-  

      - name: Install dependencies  
        run: npm install axios  requests 

      - name: Run Build  
        run: |  
          ls ${{ github.workspace }}  
          echo Run Build  

  deploy:  
    needs: build  
    runs-on: ubuntu-latest  

